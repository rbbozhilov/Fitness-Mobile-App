<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FitnessCardActivity">

    <EditText
        android:id="@+id/editTextFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:layout_marginTop="16dp"
        android:inputType="text"/>

    <EditText
        android:id="@+id/editTextLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:layout_below="@id/editTextFirstName"
        android:layout_marginTop="8dp"
        android:inputType="text"/>

    <EditText
        android:id="@+id/editTextFitnessCardNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fitness Card Number"
        android:layout_below="@id/editTextLastName"
        android:layout_marginTop="8dp"
        android:inputType="text"/>

    <Button
        android:id="@+id/btnGetExpire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check"
        android:layout_below="@id/editTextFitnessCardNumber"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textViewExpireDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnGetExpire"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:textStyle="bold"/>
</RelativeLayout>